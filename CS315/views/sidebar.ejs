    <div  id="searchBlock" class="sidenav" > 
        Select Foods
        <a href="javascript:void(0)" class="closebtn" onclick="closeSearch()" >&times;</a>

        <div class="row">
           <div class="col-xs-4" style="padding-right: 3px; padding-left:0px; text-align:end; margin-left:-5%;">Need more foods? </div> 
           <div class="col-xs-7" style="text-align: left; padding:0px;"><button style=" color: #95D1CC;" name="userName" value="<%=daysList[0]._id %>" onclick="OpenCreatefood()"> create new Food</button> </div>
           
        </div>
        
        <div id="newFooddata">
            <form action="/addData" method="post">
                <div>name <input type="text" name="Foodname" autocomplete="off" ></div>
                <input type="hidden"  name="Foodcat" value="<%= daysList[0].user_id %>" >
                <div>calories <input type="Number" name="Foodcal" autocomplete="off"></div>
                <div>Fat <input type="Number" name="Foodfat" autocomplete="off"></div>
                <div>carbs <input type="Number" name="Foodcarbs" autocomplete="off"></div>
                <div>protein <input type="Number" name="Foodprot" autocomplete="off"></div>
                
            <button type="submit" id="addmyData" class="simple" style="width:80%; align-items:center; margin:5px;">add</button>
            </form>
            

        </div>

        <div style="width: 100%; height:50px; " class="row">
        
            <form class="navbar-form " >
                <button type="button" class="btn btn-secondary filter" id="filterButton" >
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-funnel" viewBox="0 0 16 16"> 
                    <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5v-2zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2h-11z"/>
                    </svg>
                </button>
                
                <input type="search" id="searchBar" name="foodtype" placeholder="search" autocomplete="off" class="nosubmit" > 
                
            </form>
            <div id="filterbtns" style="display: none;">
                <% var allcategories= ["all categories","Poultry", "Beef","Pork","fish", "Vegetables", "Dairy and eggs","Grains and Pasta","Fruits and Juices", "Fats & oils", "Sauces and Soups","Spices and herbs" ,"sweets and snacks", "beverages", "Baked Products","Legumes & Legume Products","myfoods"] %>
                <%  for( var i=0; i< allcategories.length; i++ ){ %>
                <div class="row">
                    <button class="filterBtn" value="<%= i %>" type="button" > <%= allcategories[i] %></button>
                </div>
                
                <% }%>
            </div>    
            

    
        </div>
      
        <div class="menulist">
            <form  method="post" id="mealitem">
            <% for(var i=0; i < FooditemsList.length; i++){ %>
                
                    <div class="row menu <%=FooditemsList[i].food_type %> " name="<%= FooditemsList[i]._id %>" >
                        <div class="col-xs-12 menutop" >
                            <button type="submit" name="itemtoadd" value ="<%= FooditemsList[i]._id %>" class="menuItem" ><%= FooditemsList[i].title %> 
                            </button>
                            
                        </div>
                        <div  class="col-xs-12 menumid" >
                           <span class="menucal"><%= FooditemsList[i].cal %>kcal</span>  / 100 g
                        </div>
                    </div>
               
            <%}%>
            <input type="hidden" name="Dayname" value="<%= dayName %>">
            <input type="hidden" name="Mealname" id="mn">
            </form>
        </div>
    
    </div>
    
    